---
const { color = "green", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "red" | "green";
	title?: string;
}

const colors = {
	red: "bg-brand-red/60 text-white",
	green: "bg-brand-green/60 text-white",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-sm font-semibold ${colors[color]}`}
	>{title}</span
>
